{
  "storage": {
    "rules": "storage.rules"
  },
  "firestore": {
    "database": "(default)",
    "location": "us-central1",
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ]
    }
  ],
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/wed",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "database": {
      "host": "127.0.0.1"
    },
    "firestore": {
      "host": "127.0.0.1"
    },
    "hosting": {
      "host": "127.0.0.1"
    },
    "storage": {
      "host": "127.0.0.1"
    },
    "hub": {
      "host": "127.0.0.1"
    },
    "ui": {
      "host": "127.0.0.1"
    },
    "logging": {
      "host": "127.0.0.1"
    },
    "functions": {
      "host": "127.0.0.1"
    }
  }
}
